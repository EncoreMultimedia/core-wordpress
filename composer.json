{
  "name": "EncoreMultimedia/core-wordpress",
  "description": "Project template for WordPress projects with composer",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Johnny Martin"
    },
    {
      "name": "Garrett Whitehorn"
    }
  ],
  "repositories":[
    {
      "type":"composer",
      "url":"https://wpackagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {"php": "5.6"}
  },
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.5",
    "johnpbloch/wordpress": "^4.9",
    "oscarotero/env": "^1.1",
    "roots/wp-password-bcrypt": "^1.0",
    "roots/wp-stage-switcher": "^2.0",
    "vlucas/phpdotenv": "^2.4",
    "wpackagist-plugin/adminimize": "^1.11.4",
    "wpackagist-plugin/autodescription": "^3.0.6",
    "wpackagist-plugin/caldera-forms": "^1.6",
    "wpackagist-plugin/child-theme-configurator": "^2.3",
    "wpackagist-plugin/disable-comments": "^1.7",
    "wpackagist-plugin/duplicate-post": "^3.2",
    "wpackagist-plugin/ewww-image-optimizer": "^4.1",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "^5.3.2",
    "wpackagist-plugin/google-sitemap-generator": "^4.0.7",
    "wpackagist-plugin/jetpack": "^6.2",
    "wpackagist-plugin/mainwp-child": "^3.4.8",
    "wpackagist-plugin/nginx-helper": "^1.9.11",
    "wpackagist-plugin/safe-svg": "^1.6.1",
    "wpackagist-plugin/tinymce-advanced": "^4.6.7",
    "wpackagist-plugin/user-role-editor": "^4.40",
    "wpackagist-plugin/wordfence": "^7.0",
    "wpackagist-plugin/wp-cfm": "^1.4.5",
    "wpackagist-plugin/wp-retina-2x": "^5.2.3",
    "wpackagist-plugin/wp-smartcrop": "^1.4.7"
  },
  "scripts": {
    "pre-install-cmd": "mv web/wp/wordfence-waf.php web/ || exit 0",
    "post-install-cmd": "mv web/wordfence-waf.php web/wp/ || exit 0"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
